{
    "compilerOptions": {
      "target": "es2022",
      "module": "nodenext",
      "lib": ["es2022", "DOM", "DOM.Iterable"],
      "skipLibCheck": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      "verbatimModuleSyntax": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "inlineSources": true,
      "outDir": "./app/dist",
      "rootDir": "./app/src",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noUncheckedIndexedAccess": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitOverride": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": false, // Using accessor
      "useDefineForClassFields": true, // Recommended false according to Lit docs, but we shall see...
      "forceConsistentCasingInFileNames": true,
      "plugins": [
        {
          "name": "ts-lit-plugin",
          "strict": true
        }
      ]
    },
    "include": ["app/src/*.ts", "app/src/**/*.ts"],
    "exclude": ["app/node_modules"]
}